<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Recommendation</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/recommendation">Recommendation</a></li>
            <li class="breadcrumb-item active">Add Recommendation</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Add Recommendation Form  </h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/recommendation/edit/<%= recommendation._id %>?_method=PUT" method="POST" enctype="multipart/form-data" >
              <div class="card-body">
                <div class="form-group">
                  <label>Nama Pasien</label>
                  <select class="form-control select2" style="width: 100%;" name="emr" required>
                    <option selected="selected">Choose Patient</option>
                    <% emr.forEach(emr=>{ %>
                    <option value="<%= emr._id %>"><%=emr.name %>
                        <% if(emr._id.toString() === recommendation?.emr?._id.toString()) { %>
                            selected
                          <% }%>
                        >
                        <%= emr.name %>
                    
                    </option>
                    <% }) %>
                    
                  </select>
                </div>
                <div class="form-group">
                    <label for="recommend">Recommendation</label>
                    <div id="cid_45" class="form-input-wide" data-layout="full">
                        <textarea id="input_45" class="form-control" name="recommend" style="height:163px" data-component="textarea" aria-labelledby="label_45"></textarea>
                      </div>
                </div>
                <div class="form-group">
                    <label for="date">Next Treatment Date</label>
                    <input type="date" name="date" class="form-control" id="exampleInputEmail1" placeholder="Enter Date" required>
                </div>
                <div class="form-group">
                    <label>Nama therapist</label>
                    <select class="form-control select2" style="width: 100%;" name="therapist" required>
                      <option selected="selected">Choose therapist</option>
                      <% therapist.forEach(therapist=>{ %>
                        <option value="<%= therapist._id %>" 
                          <% if(therapist._id.toString() === recommendation?.therapist?._id.toString()) { %>
                              selected
                            <% }%>
                          >
                          <%= therapist.therapistName %>
                        </option>
                      <% }) %>
                      
                    </select>
                  </div>

              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>

